<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_app_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_54sdp"
    android:background="@color/purple"
    android:elevation="@dimen/_25sdp"
    android:foregroundGravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/actionbaricon"
            android:layout_width="@dimen/_31sdp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:src="@drawable/ic_menu_drawer" />

        <ImageView
            android:layout_width="@dimen/_154sdp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:src="@drawable/app_icon_new" />

        <ImageView
            android:id="@+id/actionbarcart"
            android:layout_width="@dimen/_31sdp"
            android:layout_height="@dimen/_31sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_shopping_cart" />
    </LinearLayout>

</RelativeLayout>